<div class='"form-group list-group list-group-item content'>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class='row'>
      <fieldset class='form-group col-md-6'>
        <%= f.label 'First Name' %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </fieldset>
    </div>

    <div class='row'>
      <fieldset class='form-group col-md-6'>
        <%= f.label 'Last Name' %><br />
        <%= f.text_field :last_name, autofocus: true %>
      </fieldset>
      <fieldset class="form-group col-md-6">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </fieldset>
    </div>

    <div class='row'>
      <fieldset class='form-group col-md-6'>
        <%= f.label :gender %><br />
        <%= f.radio_button :gender, 'M' %> Male
        <%= f.radio_button :gender, 'F' %> Female
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </fieldset>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  Already have an account? <%= render "devise/shared/links" %>
</div>